# ========================================
# PX - Environment Variables Configuration
# ========================================

# ========================================
# 서버 설정
# ========================================
API_HOST=0.0.0.0
API_PORT=8002
WORKERS=1

# ========================================
# 애플리케이션 설정
# ========================================
LOG_LEVEL=INFO
ENVIRONMENT=development

# ========================================
# AI API 설정
# ========================================
# Google Gemini API 키
GOOGLE_API_KEY=your-google-api-key-here

# Google Gemini SSL 검증 설정
# - true: SSL 인증서 검증 활성화 (프로덕션 권장)
# - false: SSL 인증서 검증 비활성화 (개발/테스트용, 자체 서명 인증서 문제 해결)
# - 미설정: ENVIRONMENT에 따라 자동 결정 (production=true, 그 외=false)
GEMINI_VERIFY_SSL=false

# OpenAI API 키
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI GPT-4o 모델 설정
OPENAI_MODEL_DEFAULT=gpt-4o
OPENAI_TIMEOUT=300.0
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Anthropic API 키
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AWS Bedrock 설정
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_REGION=ap-northeast-2

# Bedrock 모델 설정 - Claude 3.7 Sonnet (APAC Inference Profile)
BEDROCK_MODEL_ID=apac.anthropic.claude-3-7-sonnet-20250219-v1:0

# Bedrock 타임아웃 설정 (10분)
BEDROCK_TIMEOUT=600

# ========================================
# Redis 설정
# ========================================
REDIS_URL="redis://localhost:6379"
REDIS_DB=0
REDIS_DECODE_RESPONSES=true
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_CACHE_TTL=3600
USE_REDIS=true

# ========================================
# 파일 업로드 설정
# ========================================
# 단일 파일 최대 크기 (바이트 단위, 기본: 10MB)
MAX_FILE_SIZE=10485760

# 전체 업로드 파일 총합 최대 크기 (바이트 단위, 기본: 20MB)
MAX_TOTAL_FILE_SIZE=20971520

# 허용되는 파일 확장자
ALLOWED_EXTENSIONS=.txt,.md,.pdf,.docx,.xlsx,.csv,.json,.pptx,.ppt

# 최대 업로드 파일 개수
MAX_FILES=10

# 업로드 디렉토리
UPLOAD_DIR=./uploads

# 업로드 파일 정리 주기 (일 단위)
CLEANUP_DAYS=30

# ========================================
# 보안 설정
# ========================================
SECRET_KEY=dev-key-change-in-production-abcd1234
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ========================================
# 개발 환경 설정
# ========================================
RELOAD=true
DEBUG=true
DEBUG_MODE=true

# ========================================
# 성능 설정
# ========================================
TIMEOUT=300

# ========================================
# 모니터링 설정
# ========================================
HEALTH_CHECK=true
METRICS=false

# ========================================
# Slack 알림 설정
# ========================================
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=your-slack-webhook-url-here
SLACK_CHANNEL=#alarm_hp
SLACK_USERNAME=PX-API-Bot
SLACK_ICON_EMOJI=:warning:

# ========================================
# Term Extraction Integration 설정
# ========================================
TERM_EXTRACTION_MAX_ENTITIES_PER_CHUNK=50
TERM_EXTRACTION_ENABLE_PARALLEL=true
TERM_EXTRACTION_MAX_WORKERS=4
TERM_EXTRACTION_ENABLE_CACHING=true
TERM_EXTRACTION_CACHE_TTL=3600
TERM_EXTRACTION_CHUNK_TIMEOUT=60
TERM_EXTRACTION_MAX_RETRIES=3
TERM_EXTRACTION_OPENAI_MODEL=gpt-4o
TERM_EXTRACTION_OPENAI_TEMPERATURE=0.1
TERM_EXTRACTION_OPENAI_MAX_TOKENS=2000
CHUNK_SIZE=2000

# ========================================
# 로그 카테고리별 제어 설정
# ========================================
LOG_ALL=false
LOG_REDIS_METRICS=false
LOG_API_REQUEST=false
LOG_AI_USAGE=false
LOG_CACHE=false
LOG_SESSION=false
LOG_FILE_UPLOAD=false
LOG_SSE=false
LOG_ERROR=true
LOG_SYSTEM=false
LOG_WORKER=false
LOG_MONITORING=false
LOG_WEB_SEARCH=false
LOG_CHUNKING=false
LOG_DEBUG=false

# ========================================
# RapidAPI 설정 (YouTube, LinkedIn, Website 추출)
# ========================================
RAPIDAPI_KEY=your-rapidapi-key-here

# ========================================
# Chat 템플릿 설정
# ========================================
CHAT_TEMPLATE_DIR=src/chat/infrastructure/templates
CHAT_DEFAULT_SYSTEM_TEMPLATE=default_system

WTPSPLIT_SERVICE_MODE=smart